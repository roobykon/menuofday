{% trans_default_domain 'cocorico_listing' %}

<div id="expires-at-form-container">
    {% if app.request.isXmlHttpRequest %}
        {% include 'CocoricoCoreBundle:Frontend/Common:_flash.html.twig' %}
    {% endif %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="field-row datepicker-holder-ajax">
        <div class="col">
            {{ form_errors(form.expires_at) }}
            <span class="label">{{ form_label(form.expires_at) }}</span>
    
            <div class="input-append date field-holder">
                    {{ form_widget(form.expires_at, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': "/      /"
                        }
                    }) }}
                    <span class="add-on">
                        <i data-date-icon="icon-calendar" data-time-icon="icon-time" class="icon-calendar"></i>
                    </span>                
            </div>
        </div>
    </div>
    
    <div class="btn-block text-center">
        <button type="submit" class="btn btn-default">
            {{ 'listing.save'|trans }}
        </button>
    </div>

    {{ form_end(form) }}

    <script>
        $(function () {
            $("#duration-form-container").submitAjaxForm(function () {
                jcf.replaceAll("#duration-form-container");
            });
            $("[data-toggle='tooltip']").tooltip();
        });
    </script>

</div>


